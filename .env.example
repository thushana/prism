# Next.js Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# AI / Intelligence (Vercel AI Gateway)
# =============================================================================

# Required: Vercel AI Gateway API key
# Get from: Vercel Dashboard → Project → Settings → AI → Gateway → API keys
AI_GATEWAY_API_KEY=

# Optional: Provider API keys for BYOK (Bring Your Own Key)
# If not set, uses Vercel's managed keys (still 0% markup)
# OPENAI_API_KEY=sk-proj-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_GENERATIVE_AI_API_KEY=...

# Optional: Override default model (default: google/gemini-3-flash)
# AI_DEFAULT_MODEL=google/gemini-3-flash

# Optional: Override default temperature (default: 0.7)
# AI_DEFAULT_TEMPERATURE=0.7

# Optional: Disable gateway for local testing (default: true)
# AI_GATEWAY_ENABLED=false

# =============================================================================
# Database
# =============================================================================

# SQLite database path (relative to workspace root)
# DATABASE_URL=file:./data/database/sqlite.db
